log:
  level: DEBUG
api:
  dashboard: true

entryPoints:
  http:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: https
          scheme: https
  https:
    address: ":443"
    http:
      tls:
        certResolver: tls-cr
    transport:
      respondingTimeouts:
        #timeout in s
        readTimeout: 1
        writeTimeout: 1
  metrics:
    address: ":9101"

accessLog: {}

providers:
  file:
   directory: "/configs/"
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    watch: true

# http certificate resolver
certificatesResolvers:
  tls-cr:
    acme:
      email: {{ le_email }}
      storage: /letsencrypt/acme.json
      tlsChallenge: {}
  http-cr:
    acme:
      email: {{ le_email }}
      storage: /letsencrypt/acme.json
      httpChallenge:
        entryPoint: http

metrics:
  prometheus:
    entryPoint: metrics

